!!!
%html
	%head
		/[if lt IE 9]
			%script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
		/[if lt IE 8]
			%script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
		/[if lt IE 7]
			%script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
		%meta{content: "yes", name: "apple-mobile-web-app-capable"}/
		%meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
		%meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}/
		%link{:href => "http://fonts.googleapis.com/css?family=Open+Sans", :rel => "stylesheet", :type => "text/css"}/
		%title="TopTierTraveling | " + @title
		%meta{content: "#{@meta}", name: "description"}/
		%link{rel: "icon", type: "image/x-icon", href: "#{asset_path("favicon.ico")}"}/
		%link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
		= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "application", "data-turbolinks-track" => true
		= csrf_meta_tags
	%body
		%a#twitter-mention-button{"data-dnt" => "true", "data-related" => "toptiertravelin", "data-size" => "large", :href => "https://twitter.com/intent/tweet?screen_name=toptiertravelin&text=BlahBlahBlah", style: "display: none"} Tweet to @toptiertravelin
		:javascript
			window.twttr = (function(d, s, id) {
					var t, js, fjs = d.getElementsByTagName(s)[0];
					if (d.getElementById(id)) return;
					js = d.createElement(s);
					js.id = id;
					js.src = "https://platform.twitter.com/widgets.js";
					fjs.parentNode.insertBefore(js, fjs);
					return window.twttr || (t = {
						_e: [],
						ready: function(f) {
							t._e.push(f)
						}
					});
			}(document, "script", "twitter-wjs"));
		-if (current_page?(about_path) or current_page?(contact_path) or current_page?(home_path))
			%header.header
				= render partial: "/pages/headercontent"
			.content#content#adjust-content
				= yield
		-else
			%header.header
				= render partial: "/pages/headercontent"
			.content#content
				= yield
		%footer
			.info-links
				.info-link
					%a{href: "/"}
						%i.fa.fa-home
						%span Home
				.info-link
					%a{href: "/about"}
						%i.fa.fa-info
						%span About
				.info-link
					%a{href: "/contact"}
						%i.fa.fa-comments-o
						%span Contact
			#fb-root
		= javascript_include_tag params[:controller]
		= javascript_include_tag "#{params[:controller]}_#{params[:action]}" if Rails.application.assets.find_asset "#{params[:controller]}_#{params[:action]}"
		:javascript
			window.twttr=(function(d,s,id){var t,js,fjs=d.getElementsByTagName(s)[0];if(d.getElementById(id)){return}js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);return window.twttr||(t={_e:[],ready:function(f){t._e.push(f)}})}(document,"script","twitter-wjs"));
