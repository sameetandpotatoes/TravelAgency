!!!
%html
	%head
		/[if lt IE 9]
			%script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
		/[if lt IE 8]
			%script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
		/[if lt IE 7]
			%script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
		%meta{content: "yes", name: "apple-mobile-web-app-capable"}/
		%meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
		%meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}/
		%link{:href => "http://fonts.googleapis.com/css?family=Open+Sans", :rel => "stylesheet", :type => "text/css"}/
		%title="TopTierTraveling | " + @title
		%meta{content: "#{@meta}", name: "description"}/
		%link{rel: "icon", type: "image/x-icon", href: "#{asset_path("favicon.ico")}"}/
		= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "application", "data-turbolinks-track" => true
		= csrf_meta_tags
	%body
		-if (current_page?(about_path) or current_page?(contact_path) or current_page?(home_path))
			%header.header
				= render partial: "/pages/headercontent"
			.content#content#adjust-content
				= yield
		-else
			%header.header
				= render partial: "/pages/headercontent"
			.content#content
				= yield
		%footer
			.info-links
				.info-link
					%a{href: "/"}
						%i.fa.fa-home
						%span Home
				.info-link
					%a{href: "/about"}
						%i.fa.fa-info
						%span About
				.info-link
					%a{href: "/contact"}
						%i.fa.fa-comments-o
						%span Contact
			.twitter-social.social-slide
			.facebook-social.social-slide
			.google-social.social-slide
			.instagram-social.social-slide

