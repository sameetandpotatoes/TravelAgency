- @title="Hawaii"
- @meta="Hawaii"

%section.module.parallax.parallax-1
  .container
    %h1 Serene
%section.module.content
  .container
    .weather-data
      .weather-day
        %p#weather-header #{@weatherData[0]["date"]["tz_long"]}
        =image_tag(@weatherData[0]["icon_url"], size: "100", :class => "grayscale")
        =@weatherData[0]["date"]["pretty"].split(/\s+/, 3+1)[0...3].join(' ')
        %p #{@weatherData[0]["date"]["weekday"]}
        %p.inline #{@weatherData[0]["high"]["fahrenheit"]}°F
        %p.inline #{@weatherData[0]["conditions"].downcase}
    - @weatherData = @weatherData[1..3]
    - @weatherData.each do |element|
      .weather-day.inline
        =image_tag(element["icon_url"], size: "75", :class => "grayscale")
        %p=element["date"]["weekday"]
        %p.inline #{element["high"]["fahrenheit"]}°F
        %p.inline=element["conditions"].downcase
    #outer-currency
      #currency-container
        %p 1 USD = #{@currencyData} #{@localCurrency}
%section.module.parallax.parallax-2
  .container
    %h1 Rise
%section.module.content
  .container
    %p#current-days Current Days: 1
    %input#days{"data-slider-id" => "daySlider", "data-slider-max" => "10", "data-slider-min" => "1", "data-slider-step" => "1", "data-slider-value" => "1", "data-slider-tooltip" => "hide", "data-slider-handle" => "round", type: "text"}/
    .itinerary
      .event{"data-min-value" => "5", "data-cost" => "1000"}
        %p.entry-header Oahu
        .entry-content
          %p Hotel: Hotel A
          %p Visit 1
          %p Visit 2
      .event{"data-min-value" => "3", "data-cost" => "1500"}
        %p.entry-header Maui
        .entry-content
          %p Hotel: Hotel B
          %p Visit 1
          %p Visit 2
      .event{"data-min-value" => "1", "data-cost" => "2000"}
        %p.entry-header Big Island
        .entry-content
          %p Hotel: Hotel C
          %p Visit 1
          %p Visit 2
      %span Total Price: $
      %span#total-price 0
