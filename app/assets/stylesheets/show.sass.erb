#outer-currency
	width: 198px
	border: 1px solid #55A516
	margin: 0 auto

#currency-container
	text-align: center
	background-color: #55A516
	width: 100%
	font-size: 13px
	font-weight: bold
	height: 18px
	padding-top: 2px

#currency-container > a
	color: #FFFFFF
	text-decoration: none

.basic-info
	display: inline-block
	font-size: 1.7em
	width: 100%
	text-align: center

.basic-info > img
	display: inline-block

#weather-header
	font-size: 2.3em
	font-family: 'Open Sans'
	text-align: center
	padding: 65px 0px 10px 0px

.weather-data
	// background-size: inherit
	// margin: 0 auto
