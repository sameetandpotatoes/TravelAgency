	// text-align: left
	// width: 41%

.weather-data > p
	padding: 8px 0px 0 40px

.itinerary > span
	display: inline-block

.entry-content
	overflow: hidden
	p, li
		padding: 10px 0
		line-height: 20px
		font-size: 16px

.hide-content
	height: 5px

.show-content
	height: auto
	min-height: auto

