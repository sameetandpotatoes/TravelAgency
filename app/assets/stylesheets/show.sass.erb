.parallax-1 > .container
	position: relative
	top: 10%

.map
	width: 50%
.map, .map-images
	display: inline-block
	margin: 0 2%
#hawaii-map
	height: 480px
.map-images
	span
		display: inline-block
		background: black
		&:hover img
			opacity: 0.7
	img
		width: 500px
		height: 157px
		display: block
		-webkit-transition: all 0.3s linear
		-moz-transition: all 0.3s linear
		-ms-transition: all 0.3s linear
		-o-transition: all 0.3s linear
		transition: all 0.3s linear
