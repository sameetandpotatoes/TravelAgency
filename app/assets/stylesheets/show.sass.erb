.weather-data
	display: inline-block
	font-size: 1.7em
	width: 100%
	text-align: center
	img
		display: block
		margin: 0 auto

.weather-day
	font-size: 18px

.weather-day.inline
	font-size: 16px
	min-width: 100px
	padding: 10px

.grayscale
	filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale")
	filter: gray
	-webkit-filter: grayscale(100%)
	&:hover
		filter: none
		-webkit-filter: grayscale(0%)

.show-header
	font-size: 1.5em
	font-family: 'Open Sans'
	text-align: center
	padding-top: 30px
	padding-bottom: 10px

.left
	float: left
	margin-left: 20%

.right
	float: right
	margin-right: 20%

.gray
	color: gray

.bold
	font-weight: bold

.itinerary > span
	display: inline-block

.inline
	display: inline-block

.entry-content
	overflow: hidden

.event
	font-size: 1.3em
	p
		padding: 10px 0
		line-height: 20px

.hide-content
	height: 5px

.show-content
	height: auto
	min-height: auto

.entry-header
	text-decoration: underline
	&:hover
		color: gray
		cursor: pointer

.currency_input
	padding: 10px
	border: solid 5px #c9c9c9
	box-shadow: inset 0 0 0 1px #707070
	transition: box-shadow 0.3s, border 0.3s

.currency_input:focus
	border: solid 5px #969696
