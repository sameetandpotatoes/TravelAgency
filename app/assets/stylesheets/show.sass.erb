.parallax-1 > .container
	position: absolute
	top: 10em
	background-color: rgba(0,0,0,0.6)

.map
	width: 49%
.map, .map-images
	display: inline-block
	margin: 0 2%
#hawaii-map
	height: 480px
.map-images
	span
		background: black
	img
		width: 500px
		height: 157px
		display: block
		-webkit-transition: all 0.2s linear
		-moz-transition: all 0.2s linear
		-ms-transition: all 0.2s linear
		-o-transition: all 0.2s linear
		transition: all 0.2s linear

.image
	width: 100%
	position: relative
	h2
		font-size: 24px
		position: absolute
		width: 100%
		top: 0px
		color: white
		font-variant: small-caps

.descriptions
	div
		text-align: left
		display: none

.weather_title
	color: white
	padding-top: 5%
	margin: 0

.single-day
	float: left
	position: absolute
	top: -75px
	left: 0px

.multiple-days
	float: right
	position: absolute
	top: -10px
	right: -175px
	display: inline-block
	width: 80%

.weather-data
	position: relative
	margin: 0 2%
	top: 10em
	color: white
	img
		margin: 0 auto

.weather-time
	text-align: left

.weather-day
	background-color: rgba(0, 0, 0, 0.6)
	font-size: 18px
	color: white
	padding: 10px
	.day
		font-size: 22px
		padding-bottom: 15px
		font-variant: small-caps

.weather-day > div
	font-size: 26px

.weather-day.inline
	font-size: 16px
	min-width: 100px
	padding: 20px

.show-header
	font-size: 1.5em
	text-align: center
	padding-top: 30px
	padding-bottom: 10px

.left
	float: left

.right
	float: right
	margin-right: 20%

.bold
	font-weight: bold

.itinerary > span
	display: inline-block

.inline
	display: inline-block

.entry-content
	text-align: left
	overflow: hidden

.event
	font-size: 1.3em
	p
		padding: 10px 0
		line-height: 20px

.new-activities
	display: inline-block
	width: 33%
	vertical-align: top
	h1
		margin: 0
		padding: 0

.dest-activities
	text-align: left
	font-size: 16px

.package
	min-width: 100%
	padding: 1.2em 0
	text-align: left

.all-packages .package:hover
	background-color: #DCDCDC

.pk-image
	display: inline-block
	img
		max-width: 100px
		max-height: 100px

.pk-desc
	text-align: left
	display: inline-block
	min-width: 60%
	h2
		margin: 0
		font-size: 18px
	a
		color: #2A5DB0
		&:hover
			color: #2200CC

.pk-fav
	display: inline-block
	color: black
	a
		border-radius: 5px
		color: white
		-webkit-transition: all 0.3s
		-moz-transition: all 0.3s
		-ms-transition: all 0.3s
		-o-transition: all 0.3s
		transition: all 0.3s
		padding: 5px 10px
		text-decoration: none
		background-color: green
		&:hover
			opacity: 0.5
	.disabled
		background-color: gray

.terms
	text-align: left
	font-size: 12px

.chk-selections
	margin: 0
	vertical-align: top

.pk-selections
	margin: 0
	width: 100%
	overflow: auto
	h2
		margin: 0

.conditions
	clear: both
	position: relative
	top: 50px

.parallax-1
	color: white

.marker-title
	text-align: center

.price, .nights
	display: block
	font-size: 22px

.squareChkBox
	width: 20px
	margin: 1px auto
	position: relative
	display: inline-block

.activity-title
	display: inline-block

.social
	display: inline
	float: left
	width: 33%

.terms_conditions
	display: inline

.social > h2
	margin: 0

//Scrollbar
.jspDrag
	background: none repeat scroll 0 0 #A9A9A9 !important

.jspTrack
	background: none repeat scroll 0 0 #F5F5F5 !important

.jspArrow
	background: none repeat scroll 0 0 #878787 !important

@media (max-width: 414px)
	.multiple-days
		display: none
	.chk-selections, .pk-selections
		width: 100%

@media (max-width: 768px)
	.multiple-days > .weather-day:nth-child(n+2)
		display: none
	section.module.parallax .container > h1
		font-size: 1.5em
	section.module.parallax .container > p
		font-size: 0.95em
	.single-day
		float: none
	.back > p
		font-size: 12px
	#height
		height: 300px
	.flip-container, .map-images img
		width: 100%


@media (max-width : 1024px)
	.map, .map-images
		margin: 0
	#hawaii-map
		height: 400px
	.multiple-days > .weather-day:nth-child(n+3)
		display: none
	.map
		width: 100%
