.map
	width: 50%
.map, .map-images
	display: inline-block
	margin: 0 2%
#hawaii-map
	height: 480px
.map-images
	span
		display: inline-block
		background: black
		&:hover img
			opacity: 0.7
	img
		width: 500px
		height: 157px
		display: block
		-webkit-transition: all 0.3s linear
		-moz-transition: all 0.3s linear
		-ms-transition: all 0.3s linear
		-o-transition: all 0.3s linear
		transition: all 0.3s linear
		&:hover
			cursor: pointer
.image
	width: 100%
	position: relative
	h2
		font-size: 24px
		position: absolute
		width: 100%
		top: 0px
		color: white
		font-variant: small-caps

.descriptions > div
	display: none
.single-day
	float: left
.multiple-days
	float: right
	box-sizing: content-box

.weather-data
	position: relative
	margin: 0 2%
	top: 10em
	color: white
	img
		margin: 0 auto

.weather-time
	text-align: left

.weather-day
	font-size: 18px
	color: white
	.day
		padding-bottom: 15px

.weather-day > div
	font-size: 26px

.weather-day.inline
	background-color: rgba(0, 0, 0, 0.6)
	font-size: 16px
	min-width: 100px
	padding: 20px

.grayscale
	filter: none
	-webkit-filter: grayscale(0%)
	&:hover
		filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale")
		filter: gray
		webkit-filter: grayscale(100%)

.show-header
	font-size: 1.5em
	font-family: 'Open Sans'
	text-align: center
	padding-top: 30px
	padding-bottom: 10px

.left
	float: left

.right
	float: right
	margin-right: 20%

.bold
	font-weight: bold

.itinerary > span
	display: inline-block

.inline
	display: inline-block

.entry-content
	text-align: left
	overflow: hidden

.event
	font-size: 1.3em
	p
		padding: 10px 0
		line-height: 20px

.new-activities
	display: inline-block
	width: 33%
	margin: 1.0em 0

.package
	display: inline-block
	margin: 0.5em 0
	min-width: 50%

.pk-image
	float: left
	padding: 2em
	min-width: 250px
	min-height: 150px
.pk-desc
	padding: 2em
	text-align: left

.terms
	text-align: left
	font-size: 9px

.currency_input
	padding: 10px
	border: solid 5px #c9c9c9
	box-shadow: inset 0 0 0 1px #707070
	transition: box-shadow 0.3s, border 0.3s

.currency_input:focus
	border: solid 5px #969696

.parallax-1
	color: white

.marker-title
	text-align: center

.price, .nights
	display: block
	font-size: 22px
