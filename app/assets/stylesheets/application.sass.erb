  * or vendor/assets/stylesheets of plugins, if any, can be referenced here using a relative path.
  *
  * You're free to add application-wide styles to this file and they'll appear at the top of the
  * compiled file, but it's generally better to create a new file per style scope.
  *
  *= require_self
  *= require_tree .
  */

@font-face
  font-family: "HN-Regular"
  src: url(<%= asset_path 'HN-Light.ttf' %>)

@font-face
  font-family: "HN-Thin"
  src: url(<%= asset_path 'Lato-Light.ttf' %>)

h1,h2,h3
  font-family: 'HN-Regular'

p,a,span,div,li
  font-family: 'HN-Thin'

html, head, body
  overflow-x: hidden

.content
  min-height: 100%

.link
  text-decoration: none

a, a:hover, a:visited
  color: inherit

#bookmark_num
  border-right: 3px solid white
  border-radius: 0px !important

.footer
  background-color: #232323
  text-align: center
  padding: 10px 0 !important
  a
    text-color: white
    text-decoration: none
    font-size: 0.8em
    padding: 5px
    display: inline-block

.sticky
  position: absolute
  width: 100%
  bottom: 0

.vacation-show
  margin: 20px 0

.description
  width: 49%
  vertical-align: top
  p
    text-align: left
    margin-left: 20px

.description-welcome
  text-align: left
  margin-left: 20px
  font-size: 18px

.item
  h1
    position: absolute
    width: 50%
    top: 100px
    right: 20px
    font-family: 'HN-Thin'
  img
    position: relative
    left: -15%

.arrow
  background: rgb(0, 0, 0)
  background: rgba(0, 0, 0, 0.7)
  width: 50px
  height: 50px
  display: block
  text-decoration: none
  position: absolute
  right: 10px
  bottom: 10px
  -webkit-border-radius: 35px
  -moz-border-radius: 35px
  border-radius: 35px
  i
    color: #fff
    margin: 0
    position: relative
    left: 1px
    top: 13px
    font-size: 2.2em
    -webkit-transition: all 0.3s ease
    -moz-transition: all 0.3s ease
    -ms-transition: all 0.3s ease
    -o-transition: all 0.3s ease
    transition: all 0.3s ease
    &:hover
      cursor: pointer

.desktop .row, .desktop .desc-texts
  display: inline-block

.desktop .desc-texts
  vertical-align: top
  margin-top: 10%

.desktop
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  /* No support for these yet, use at own risk */
  -o-user-select: none
  user-select: none

.desktop .row
  margin: 0 30px
  div
    position: relative
  h1
    color: white
    bottom: -60px
    position: relative
  img
    max-width: 200px
    max-height: 200px
    min-width: 200px
    min-height: 200px
    border-radius: 100px

.desktop .desc-texts > div
  -webkit-transition: all 0.3s ease
  -moz-transition: all 0.3s ease
  -ms-transition: all 0.3s ease
  -o-transition: all 0.3s ease
  transition: all 0.3s ease
  max-width: 90%
  padding: 0 5%
  text-align: left
  opacity: 0
  p
    margin-bottom: 5%
    font-size: 20px

.centered
  width: 100%
  text-align: center
  h1
    margin: 1.5em auto 0

.grayscale
  -webkit-filter: grayscale(100%)
  filter: grayscale(100%)
  filter: gray
  filter: url("data:image/svg+xml;utf8,<svg version='1.1' xmlns='http://www.w3.org/2000/svg' height='0'><filter id='greyscale'><feColorMatrix type='matrix' values='0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0' /></filter></svg>#greyscale")

.createdButton
  text-align: center
  font-size: 20px

.mobile
  display: none
  .image img
    max-height: 200px
  .desc
    margin: 0 2%
    text-align: left
  .row
    margin: 5% 0

//Smartphones portrait and landscape
@media (max-width: 500px)
  .item h1
    display: none
  .desktop
    display: none
  .mobile
    display: block
  .vacation
    width: 100%
