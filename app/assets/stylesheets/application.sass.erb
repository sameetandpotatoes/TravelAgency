$header-orig-height: 150px
$header-small-height: 70px
$logo-orig-size: 70px
$logo-small-size: 50px

@font-face
  font-family: "HN-Regular"
  src: url(<%= asset_path 'HN-Light.ttf' %>)

@font-face
  font-family: "HN-Thin"
  src: url(<%= asset_path 'Lato-Light.ttf' %>)

h1,h2,h3
  font-family: 'HN-Regular' !important

p,a,span,div,li
  font-family: 'HN-Thin' !important

html, head, body
  overflow-x: hidden


.header
  background-color: #232323
  color: white
  // font: 1.0em , Verdana !important
  width: 100%
  position: static
  height: $header-small-height
  top: 0
  left: 0
  overflow: hidden
  z-index: 10
  -webkit-transition: all 0.3s
  moz-transition: all 0.3s
  -ms-transition: all 0.3s
  -o-transition: all 0.3s
  transition: all 0.3s
  h1:hover
    cursor: pointer

.fixed
  position: fixed

.big-header
  height: $header-orig-height

.header p
  display: inline-block
  padding: 0
  margin: 0
  margin-right: -5px
  &::first-letter
    font-size: 180%

.header > h1
  display: inline-block
  height: $header-orig-height
  font-size: 2.2em
  margin-left: 30px
  font-weight: 100
  -webkit-transition: all 0.3s
  moz-transition: all 0.3s
  -ms-transition: all 0.3s
  -o-transition: all 0.3s
  transition: all 0.3s

.header-logo
  width: $logo-orig-size
  height: $logo-orig-size
  vertical-align: bottom
  -webkit-transition: all 0.3s
  moz-transition: all 0.3s
  -ms-transition: all 0.3s
  -o-transition: all 0.3s
  transition: all 0.3s

header.smaller
  height: $header-small-height

header.smaller > h1
  height: $header-small-height - 40
  font-size: 1.4em
  margin-top: 5px

header.smaller .vacspots span
  line-height: $header-small-height

.header-logo.smaller
  width: $logo-small-size
  height: $logo-small-size

.content
  min-height: 100%

#adjust-content
  margin-top: $header-orig-height

.link
  text-decoration: none

a, a:hover, a:visited
  color: inherit

#bookmark_num
  border-right: 3px solid white

.vacspots
  font-size: 1.2em
  float: right
  margin-right: 30px
  span
    line-height: $header-orig-height
    margin-left: 20px
    font-weight: 700
    float: left
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    -ms-transition: all 0.3s
    -o-transition: all 0.3s
    transition: all 0.3s


.vacspots a, .info-links a
  border-radius: 3px
  -webkit-transition: all 0.3s
  -moz-transition: all 0.3s
  -ms-transition: all 0.3s
  -o-transition: all 0.3s
  transition: all 0.3s
  padding: 5px 10px
  text-decoration: none
  &:hover, .active
    background-color: gray

.vacspots a.active_tab
  background-color: gray

.footer
  background-color: #232323
  text-align: center
  padding: 10px 0 !important
  a
    text-color: white
    text-decoration: none
    font-size: 0.8em
    padding: 5px
    display: inline-block

.sticky
  position: absolute
  width: 100%
  bottom: 0

.info-links, .info-link
  display: inline-block
  color: white
  padding: 0 5px
  vertical-align: top
  i
    padding: 0 4px


.vacation-show
  margin: 20px 0

.description
  width: 49%
  vertical-align: top
  p
    text-align: left
    margin-left: 20px

.description-welcome
  text-align: left
  margin-left: 20px
  font-size: 18px

.item
  h1
    position: absolute
    width: 30%
    top: 100px
    right: 0
  img
    max-height: 300px

.arrow
  background: rgb(0, 0, 0)
  background: rgba(0, 0, 0, 0.7)
  width: 50px
  height: 50px
  display: block
  text-decoration: none
  // float: right
  position: absolute
  right: 10px
  bottom: 10px
  -webkit-border-radius: 35px
  -moz-border-radius: 35px
  border-radius: 35px
  i
    color: #fff
    margin: 0
    position: relative
    left: 1px
    top: 13px
    font-size: 2.2em
    -webkit-transition: all 0.3s ease
    -moz-transition: all 0.3s ease
    -ms-transition: all 0.3s ease
    -o-transition: all 0.3s ease
    transition: all 0.3s ease
    &:hover
      cursor: pointer

.row, .desc-texts
  // display: table-cell
  display: inline-block

.desc-texts
  vertical-align: top
  margin-top: 10%

.row
  margin: 0 30px
  div
    position: relative
  h1
    color: white
    bottom: -60px
    position: relative
  img
    max-width: 200px
    max-height: 200px
    min-width: 200px
    min-height: 200px
    border-radius: 100px

.desc-texts > div
  -webkit-transition: all 0.3s ease
  -moz-transition: all 0.3s ease
  -ms-transition: all 0.3s ease
  -o-transition: all 0.3s ease
  transition: all 0.3s ease
  max-width: 90%
  padding: 0 5%
  text-align: left
  // display: none
  opacity: 0
  p
    margin-bottom: 5%
    font-size: 20px

.centered
  width: 100%
  text-align: center
  h1
    margin: 1.5em auto 0

.grayscale
  -webkit-filter: grayscale(100%)
  filter: grayscale(100%)
  filter: gray
  filter: url("data:image/svg+xml;utf8,<svg version='1.1' xmlns='http://www.w3.org/2000/svg' height='0'><filter id='greyscale'><feColorMatrix type='matrix' values='0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0' /></filter></svg>#greyscale")

.createdButton
  text-align: center
  font-size: 20px

//Smartphones portrait and landscape
@media all and (min-device-width: 320px) and (max-device-width: 480px)
  .header
    height: auto !important
    font-size: 1.0em
    h1
      height: auto !important
      font-size: 1.0em
      margin-left: 10px
  .header-logo
    height: 35px !important
    width: 35px !important
  .vacspots
    float: none !important
    font-size: 0.8em
    width: 100%
    text-align: center
    span
      line-height: 25px !important
      margin-left: 10px
  .vacation
    width: 100%
